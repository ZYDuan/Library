<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.example.zyd.libraryseat.views.SeatTable
        android:id="@+id/FirstSeatView"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"/>


    <Button
        android:id="@+id/firstSelectSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定座位"
        android:textColor="#F5DEB3"
        android:background="@drawable/button_style"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/firstVisible"
        android:layout_alignEnd="@+id/firstVisible"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/firstVisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择楼层"
        android:background="@drawable/button_style"
        android:layout_marginTop="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/firstfloor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="楼层一"
        android:background="@drawable/button_style"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/firstVisible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/secondfloor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="楼层二"
        android:background="@drawable/button_style"
        android:layout_below="@+id/firstfloor1"
        android:layout_alignRight="@+id/firstVisible"
        android:layout_alignEnd="@+id/firstVisible" />

    <Button
        android:id="@+id/thirdfloor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="楼层三"
        android:background="@drawable/button_style"
        android:layout_below="@+id/secondfloor1"
        android:layout_alignLeft="@+id/secondfloor1"
        android:layout_alignStart="@+id/secondfloor1"
        android:layout_marginTop="18dp" />
    <Button
        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:background="@drawable/button_style"
        android:layout_below="@+id/thirdfloor1"
        android:layout_alignLeft="@+id/thirdfloor1"
        android:layout_alignStart="@+id/thirdfloor1"
        android:layout_marginTop="18dp" />


</RelativeLayout>
